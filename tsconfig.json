{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
  
        "strict": true,
        "alwaysStrict": true,
    
        "baseUrl": ".",
  
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "downlevelIteration": false,
        "importHelpers": false,
        "incremental": false,
        "pretty": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "stripInternal": true
    },
    "exclude": ["lib", "node_modules", "tests/scripts"],
    "include": ["src", "tests"]
  }
  