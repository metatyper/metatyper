{
  "name": "metatyper",
  "version": "1.3.0",
  "license": "MIT",
  "description": "The MetaTyper project provides a powerful approach to using runtime types in TypeScript and JavaScript code",
  "author": {
    "name": "Vadzim Sharai",
    "email": "vadzimsharai@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metatyper/metatyper.git"
  },
  "bugs": {
    "url": "https://github.com/metatyper/metatyper/issues"
  },
  "homepage": "https://metatyper.dev",
  "tags": [
    "validation",
    "serialization",
    "typescript",
    "schema",
    "parser",
    "type",
    "inference",
    "model"
  ],
  "keywords": [
    "validation",
    "serialization",
    "typescript",
    "schema",
    "parser",
    "type",
    "inference",
    "model"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "types": "./index.d.ts",
  "browser": "./lib/metatyper.min.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./lib/index.js",
      "import": "./lib/index.mjs"
    }
  },
  "files": [
    "/lib",
    "/index.d.ts"
  ],
  "lint-staged": {
    "src/*.ts": [
      "eslint --cache --fix",
      "prettier --ignore-unknown --write {src,tests}/**/*.ts"
    ],
    "/README.md": [
      "prettier --ignore-unknown --write README.md"
    ]
  },
  "scripts": {
    "prepare:husky": "husky && sh .husky/pre-commit",
    "prepare:typedoc": "typedoc && prettier --ignore-unknown --write docs/api/**/*.md",
    "prepare": "yarn prepare:husky",
    "sandbox": "jest ./tests/sandbox.test.ts",
    "lint": "eslint {src,tests}/**/*.ts",
    "lint:fix": "yarn lint --fix && prettier --ignore-unknown --write {src,tests}/**/*.ts",
    "test:types": "tsc --noEmit --project  ./tsconfig.json",
    "test:jest": "jest",
    "test:coverage": "jest --coverage",
    "test:prepare": "ts-node tests/scripts/prepare.ts",
    "test": "yarn lint && yarn test:types && yarn test:coverage",
    "build": "rimraf ./lib && rollup -c",
    "build:dev": "rimraf ./lib && rollup -cw",
    "benchmark": "ts-node tests/benchmark/index.ts"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.7.0",
    "@jest/globals": "^29.7.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "benchmark": "^2.1.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.4",
    "globals": "^15.8.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "reflect-metadata": "^0.2.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.10.0",
    "rollup-plugin-filesize": "^10.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "=5.5.3"
  },
  "packageManager": "yarn@4.11.0",
  "sideEffects": false
}
